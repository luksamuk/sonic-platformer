{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"fmt",
				"--",
				"--check"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo fmt check - sonic-platformer"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"clippy",
				"--",
				"-D",
				"clippy::all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo clippy - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo check - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo build - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo run - sonic-platformer"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"lvledit",
				"--",
				"${input:lvlname}"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo run - lvledit"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"-p",
				"mapgen",
				"--",
				"${input:smallmap}",
				"${input:bigmap}",
				"${input:tilemode}"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo run - mapgen"
		}
	],
	"inputs": [
		{
			"id": "lvlname",
			"description": "Level name",
			"default": "R0",
			"type": "promptString"
		},
		{
			"id": "smallmap",
			"description": "Smaller tilesheet",
			"default": "resources/levels/R1/tiles.png",
			"type": "promptString"
		},
		{
			"id": "bigmap",
			"description": "Bigger tilesheet",
			"default": "resources/levels/R1/dev/16x16.png",
			"type": "promptString"
		},
		{
			"id": "tilemode",
			"description": "Tile generation mode (8_16 or 16_128)",
			"default": "8_16",
			"type": "promptString"
		},
	]
}