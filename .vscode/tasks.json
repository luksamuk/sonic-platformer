{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"fmt",
				"--",
				"--check"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo fmt check - sonic-platformer"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"clippy",
				"--",
				"-D",
				"clippy::all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo clippy - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo check - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo build - sonic-platformer"
		},
		{
			"type": "cargo",
			"subcommand": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo run - sonic-platformer"
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"lvledit",
				"--",
				"${input:lvlname}"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo run - lvledit"
		}
	],
	"inputs": [
		{
			"id": "lvlname",
			"description": "Level name",
			"default": "R0",
			"type": "promptString"
		}
	]
}